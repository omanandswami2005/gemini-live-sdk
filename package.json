{
  "name": "gemini-live-sdk",
  "version": "1.0.0",
  "description": "A comprehensive SDK for Gemini Live API with React and server support",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:lib",
    "build:lib": "vite build --mode lib && vite build --mode lib-server && vite build --mode lib-react && vite build --mode lib-umd",
    "build:server": "npm run clean && vite build --mode lib-server",
    "build:main": "npm run clean && vite build --mode lib",
    "build:umd": "npm run clean && vite build --mode lib-umd",
    "build:react": "npm run clean && vite build --mode lib-react",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "copy-worklets": "node scripts/copy-worklets.js",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.es.js",
      "require": "./dist/server/index.cjs.js",
      "types": "./dist/server/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.es.js",
      "require": "./dist/react/index.cjs.js",
      "types": "./dist/react/index.d.ts"
    },
    "./umd": {
      "import": "./dist/umd/index.umd.js",
      "require": "./dist/umd/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "server": ["dist/server/index.d.ts"],
      "react": ["dist/react/index.d.ts"],
      "umd": ["dist/index.d.ts"]
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "gemini",
    "ai",
    "live-api",
    "react",
    "audio",
    "websocket",
    "sdk",
    "video"
  ],
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.513.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.17.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.0",
    "vite": "^5.4.2",
    "vite-plugin-dts": "^4.2.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}